        while ($user = db_fetch_object($result)) {
            $matches[$user->neve.'--'.$user->ev.'--'.$user->orszag] = check_plain($user->neve.'--'.$user->ev.'--'.$user->orszag);
        }
    }
    // FEDEZTETES és LÓ //adminnak ez kell
